// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    // NOTE: When using postgresql, mysql or sqlserver, uncomment the @db.Text annotations in model Account below
    // Further reading:
    // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
    // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
    url      = env("DATABASE_URL")
}

model Session {
  id            String    @id @default(cuid())
  sessionToken  String    @unique
  userId        String
  expires       DateTime
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                String    @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?   @db.Text
  access_token      String?   @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?   @db.Text
  session_state     String?
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model User {
  id              String         @id @default(cuid())
  name            String
  email           String         
  emailVerified   DateTime?
  image           String
  role            String         @default("user")      
  accounts        Account[]
  sessions        Session[]
  createdAt       DateTime       @default(now())
  ownedCompanies  Company[]      @relation("CompanyOwner")

  @@unique([email])
}

model Company {
  id              String         @id @default(cuid())
  name            String
  email           String
  description     String?
  logo            String?
  website         String?
  ownerId         String
  urls            String[]      @default([])
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  topups          Topup[]
  lastTopup       DateTime?
  members         Member[]
  owner           User           @relation("CompanyOwner", fields: [ownerId], references: [id])
  foodSummaries   FoodSummary[]  @relation("FoodSummaryCompany")
  balance         Int            @default(0)
  breadPrice      Int            @default(0)

  @@unique([email])
}


model Member {
  id              String         @id @default(cuid())
  name            String
  email           String
  designation     String?
  role            String         @default("user")
  company         Company        @relation(fields: [companyId], references: [id])
  companyId       String
  deposits        Deposit[]
  foodSummariesBrought FoodSummary[]   @relation("membersBroughtFood")
  foodSummariesDidntBring FoodSummary[]   @relation("membersDidntBringFood")
  extraMembers FoodSummary[]   @relation("extraMembersRelatedTo")
  lastCashDeposit DateTime?
  balance         Int            @default(0)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  topups          Topup[]

  @@unique([email, companyId])
}

model Topup {
  id              String         @id @default(cuid())
  date            DateTime  
  amount          Int
  company         Company        @relation(fields: [companyId], references: [id])
  companyId       String
  topupBy         Member         @relation(fields: [topupById], references: [id])
  topupById       String
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
}

model Deposit {
  id              String         @id @default(cuid())
  date            DateTime  
  amount          Int
  member          Member         @relation(fields: [memberId], references: [id])
  memberId        String
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
}

model FoodSummary {
  id              String         @id @default(cuid())
  date            DateTime  
  totalBreadsAmount     Int
  totalCurriesAmount    Int
  receipt         String?
  extraMembers    Int?           @default(0)
  extraMembersRelatedTo Member[]   @relation("extraMembersRelatedTo")
  totalAmount     Int
  company         Company        @relation("FoodSummaryCompany", fields: [companyId], references: [id])
  companyId       String
  membersBroughtFood Member[]   @relation("membersBroughtFood")
  membersDidntBringFood Member[]   @relation("membersDidntBringFood")
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
}

